<h1>Users</h1>
<div>
  <h1>Users</h1>
  {{input value=name placeholder="Введите имя"}}
  {{input value=phoneNumber placeholder="Введите номер телефона"}}
  {{input value=password placeholder="Введите пароль"}}
  {{input value=email placeholder="Введите email"}}
    <button {{action "createUser"}}>Создать пользователя</button>
    <div>
      <table>
        <tr>
          <td>Id</td>
          <td>Name</td>
          <td>PhoneNumber</td>
          <td>Password</td>
          <td>Email</td>
          </tr>
      {{#each model as |user|}}
        <tr>
          <td>{{user.id}}</td>
          <td>{{user.nam}}e</td>
          <td>{{user.phoneNumber}}</td>
          <td>{{user.password}}</td>
          <td>{{user.email}}</td>
          <td {{action "removeUser" user.id}}>X</td>
        </tr>
      {{/each}}
      </table>
    </div>
</div>

